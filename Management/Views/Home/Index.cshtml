                    <script>
                        // Validar los checkboxes al enviar el formulario
                        document.getElementById("contact-form").addEventListener("submit", function (e) {
                            let valid = true;

                            // Validar el checkbox de DataConsent
                            const dataConsentCheckbox = document.getElementById("dataConsent");
                            const dataConsentError = document.getElementById("dataConsentError");
                            if (!dataConsentCheckbox.checked) {
                                dataConsentError.style.display = "block"; // Mostrar mensaje de error
                                valid = false;
                            } else {
                                dataConsentError.style.display = "none"; // Ocultar mensaje de error
                            }

                            // Validar el checkbox de InfoConsent
                            const infoConsentCheckbox = document.getElementById("infoConsent");
                            const infoConsentError = document.getElementById("infoConsentError");
                            if (!infoConsentCheckbox.checked) {
                                infoConsentError.style.display = "block"; // Mostrar mensaje de error
                                valid = false;
                            } else {
                                infoConsentError.style.display = "none"; // Ocultar mensaje de error
                            }

                            // Si no pasa la validación, evitar envío del formulario
                            if (!valid) {
                                e.preventDefault(); // Evita que el formulario se envíe
                            }
                        });
                    </script>

